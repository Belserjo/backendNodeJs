<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <title><%= title %></title>
</head>
<body>

<% if (create) {%>
    <div class='alert alert-success'>
        Note created!
    </div>
 <% } %>

<div class="container">
    <h1><%= title %></h1>

    <form action="/" method="post" class="mb-2 d-flex row">

        <div class="form-group mb-2 col-sm-10">
            <input type="text" class="form-control" name="title" required>

        </div>
        <button class="btn btn-primary col-sm-2 mb-2" type="submit">Create</button>

    </form>
    <% if (notes.length) { %>
        <div class="card mb-2">
            <ul class="list-group">
                <% for (const note of notes) {%>
                    <li class="list-group-item d-flex justify-content-between align-items-center">
                        <span id='<%= note.id%>'><%= note.title %></span>
                        <div class="buttons">
                            <button class="btn btn-primary" data-type="edit" data-id="<%= note.id %>">Edit title</button>
                            <button class="btn btn-danger" data-type="remove" data-id="<%= note.id %>">&times;</button>
                        </div>

                    </li>
                <% } %>
            </ul>
        </div>
    <% } else { %>
        <p>No notes</p>
    <% } %>

</div>

<script src="/app.js"></script>
</body>
</html>